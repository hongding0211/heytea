<!--pages/user/user.wxml-->


<block wx:if="{{isLogin == 1}}">
  <view class="userinfo">
    <view class="userinfo-avatar">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <open-data class="user-nickname" type="userNickName"></open-data>
  </view>
</block>
<block wx:elif="{{isLogin == 0}}">
  <button open-type="getUserInfo" bindgetuserinfo="getUserInfo" plain="true">授权登录</button>
</block>