/* pages/cart/cart.wxss */

.cart-bottom-container{
    height: 100rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;    
    background-color: #f0f0f0;
}

.cart-botton-price{
    padding-left: 40rpx;
    color: #333333;
    font-size: large;
    font-weight: 600;
}

.card{
    height: 220rpx !important;
    margin-bottom: 20rpx !important;
    align-items: center !important;
    justify-content: center !important;
}

.card-container{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.card-image{
    width: 160rpx;
    height: 160rpx;
}

.card-text-price-container{
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
    width: 450rpx;
}

.card-text-title{
    font-size: medium;
    font-weight: 600;
    margin-bottom: 5rpx;
}

.card-text-option{
    font-size: small;
    color: #b6b6b6;
    margin-bottom: 30rpx;
}

.card-price-conter-container{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    width: 400rpx;
}

.card-price-text{
    font-size: medium;
}

  
.card-conter{
    background-color: #ffffff !important;
    color: #333333 !important;
    width: 30rpx !important;
    font-size: medium !important;
    font-weight: 900 !important;
}

.card-symbol-conter{
    margin: 5rpx !important;
    padding: 15rpx !important;
    width: 10rpx !important;
    height: 10rpx !important;
    color:#ffffff !important;
    background-color: #DBA871 !important;
    border-radius: 50% !important;
}

.card-conter-disable{
    margin: 5rpx !important;
    padding: 10rpx !important;
    width: 20rpx !important;
    height: 20rpx !important;
    color: #b6b6b6 !important;
    background-color: #ffffff !important;
    border-radius: 50% !important;
    border-color: #b6b6b6 !important;
}

.button-text{
    font-weight: 600 !important;
}

.divLine{
    background: #dbdbdb;
    width: 100%;
    height: 2rpx;
    margin: 15rpx;
}

.popup-card{
    width: 550rpx;
    padding-top: 90rpx;
    padding-bottom: 15rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.popup-card-container{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.popup-fetchcode-card{
    width: 550rpx !important;    
    align-items: center !important;
    height: 250rpx;
    margin-bottom: 80rpx !important;
}

.popup-fetchcode-title{
    font-size: 30rpx;
    font-weight: 600;
    margin-top: 40rpx;
    margin-bottom: 10rpx;
    color:#333333;
}

.popup-fetchcode{
    font-size: 70rpx;
    font-weight: 500;
    margin-bottom: 40rpx;
    color:#333333;
}

.popup-transactionInfo{
    padding-left: 20rpx;
    display: flex;
    flex-direction: column;
    margin-top: 15rpx;
    margin-bottom: 20rpx;
    width: 100%;
}

.popup-transactionInfo-text{
    margin-bottom: 10rpx;
    font-size: x-small;
    color: #b6b6b6;
}

.popup-totalprice{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    font-size: medium;
    color: #333333;
    width: 98%;
    margin-bottom: 20rpx;
}

.popup-scroll-view{
    margin-bottom: 60rpx;
}

.popup-drink-info{
    display: flex;
    flex-direction: row;
    align-items: baseline;
    justify-content: space-between;
    width: 98%;
    margin-bottom: 10rpx;
    height: 90rpx;
    padding-top: 10rpx;
}

.popup-drink-info-text{
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-self: flex-start;
    width: 50%;
}

.popup-drink-info-text-title{
    font-size: small;
    color: #333333;
    font-weight: 600;
    margin-bottom: 10rpx;
}

.popup-drink-info-text-option{
    font-size: x-small;
    color: #b6b6b6;
}

.popup-drink-info-text-price{
    font-size: small;
    color: #333333;
    font-weight: 600;
}